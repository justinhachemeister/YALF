<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0">
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProjectGuid>{A1690667-ADF8-436A-AD2E-D7CB9DBC7433}</ProjectGuid>
    <Configuration Condition="'$(Configuration)'==''">Release</Configuration>
    <ConfigurationName>Release</ConfigurationName>
    <SolutionDir Condition="$(SolutionDir) == '' Or $(SolutionDir) == '*Undefined*'">..\</SolutionDir>
    <OutputDir>$(SolutionDir)NuGetBuild.Yalf\</OutputDir>
    <RestorePackages>true</RestorePackages>
  </PropertyGroup>
  <PropertyGroup>
    <MSBuildCommunityTasksPath>$(SolutionDir)\.build</MSBuildCommunityTasksPath>
  </PropertyGroup>
  <ItemGroup>
    <None Include="Yalf.nuspec" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="Yalf">
      <HintPath>..\Yalf\bin\Release\Yalf.dll</HintPath>
    </Reference>
  </ItemGroup>
  <Target Name="Clean">
    <ItemGroup>
      <FilesToDelete Include="$(OutputDir)**\*.*" />
    </ItemGroup>
    <Delete Files="@(FilesToDelete)" />
  </Target>
  <Target Name="Build" DependsOnTargets="NuGetBuild" />
  <Target Name="ReBuild" DependsOnTargets="NuGetBuild" />
  <UsingTask TaskName="PepitaPackage.CreatePackageTask" AssemblyFile="$(SolutionDir)Tools\Pepita\PepitaPackage.dll" />
  <Target Name="NuGetBuild" DependsOnTargets="Clean">
    <MakeDir Directories="$(OutputDir)" />
    <Copy SourceFiles="$(ProjectDir)Yalf.nuspec" DestinationFolder="$(OutputDir)" />
    <Copy SourceFiles="$(SolutionDir)Yalf\bin\$(ConfigurationName)\Yalf.dll" DestinationFolder="$(OutputDir)Lib\net4" />
    <Copy SourceFiles="$(SolutionDir)Yalf\bin\$(ConfigurationName)\Yalf.xml" DestinationFolder="$(OutputDir)Lib\net4" />
    <PepitaPackage.CreatePackageTask NuGetBuildDirectory="$(OutputDir)" MetadataAssembly="$(SolutionDir)Yalf\bin\$(ConfigurationName)\Yalf.dll" />
  </Target>
  <Import Project="$(SolutionDir)\.nuget\NuGet.targets" Condition="Exists('$(SolutionDir)\.nuget\NuGet.targets')" />
</Project>